{
    "type": "object",
    "definitions": {
        "nonEmptyString": {
            "type": "string",
            "minLength": 1
        },
        "nonEmptyStringArray": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/nonEmptyString"
            }
        },
        "twoNumberArray": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
        },
        "nonEmptyNumberArray": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 1,
            "maxItems": 5
        },
        "aggregationFunctions": {
            "enum": ["count", "sum", "avg", "min", "max", "sqrsum"]
        },
        "layout": {
            "enum": ["openORD", "fm3", "forceAtlas2"],
            "default": "openORD"
        },
        "clusteringAlgorithms": {
            "enum": ["kmeans"],
            "default": "kmeans"
        },
        "partitioningAlgorithms": {
            "enum": ["par1"],
            "default": "par1"
        }
    },
    "properties": {
        "data": {
            "type": "object",
            "properties": {
                "nodesCsv": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "edgesCsv": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "db": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "queryNodes": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "queryEdges": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "columnNamesNodes": {
                    "default": []
                },
                "columnNamesEdges": {
                    "default": []
                },
                "directedGraph": {
                    "enum": [true, false],
                    "default": false
                }
            },
            "required": ["nodesCsv", "edgesCsv", "db", "queryNodes", "queryEdges"],
            "additionalProperties": false
        },
        "layout": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/layout"
                },
                "ord_maxLevel": {
                    "type": "number",
                    "default": 2
                },
                "ord_startLevel": {
                    "type": "number",
                    "default": 1
                },
                "ord_lastCut": {
                    "type": "number",
                    "default": 0.8
                },
                "ord_refineCut": {
                    "type": "number",
                    "default": 0.5
                },
                "ord_finalCut": {
                    "type": "number",
                    "default": 0.5
                },
                "fm3_param1": {
                    "type": "number",
                    "default": 0.2
                },
                "fm3_param2": {
                    "type": "number",
                    "default": 0.5
                },
                "fm3_param3": {
                    "type": "number",
                    "default": 0.8
                },
                "fa2_param1": {
                    "type": "number",
                    "default": 0.2
                },
                "fa2_param2": {
                    "type": "number",
                    "default": 0.7
                },
                "fa2_param3": {
                    "type": "number",
                    "default": 1.2
                }
            },
            "required": ["name"],
            "additionalProperties": false,
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "name": {
                                "const": "openORD"
                            }
                        }
                    },
                    "then": {
                        "preoperties": {
                            "required": ["ord_maxLevel", "ord_startLevel", "ord_lastCut", "ord_refineCut", "ord_finalCut"]
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "name": {
                                "const": "fm3"
                            }
                        }
                    },
                    "then": {
                        "preoperties": {
                            "required": ["fm3_param1", "fm3_param2", "fm3_param3"]
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "name": {
                                "const": "fa2"
                            }
                        }
                    },
                    "then": {
                        "preoperties": {
                            "required": ["fa2_param1", "fa2_param2", "fa2_param3"]
                        }
                    }
                }
            ]
        },
        "summarization": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "cluster": {
                            "type": "object",
                            "properties": {
                                "aggregate": {
                                    "type": "object",
                                    "properties": {
                                        "nodes": {
                                            "anyOf": [
                                                {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object",
                                                        "properties": {
                                                            "fields": {
                                                                "$ref": "#/definitions/nonEmptyString"
                                                            },
                                                            "functions": {
                                                                "$ref": "#/definitions/aggregationFunctions"
                                                            }
                                                        },
                                                        "required": ["fields", "functions"],
                                                        "additionalProperties": false
                                                    }
                                                },
                                                {
                                                    "type": "object",
                                                    "properties": {
                                                        "fields": {
                                                            "$ref": "#/definitions/nonEmptyStringArray"
                                                        },
                                                        "functions": {
                                                            "$ref": "#/definitions/aggregationFunctions"
                                                        }
