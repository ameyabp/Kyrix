                                    "mode": {
                                        "enum": ["tabular", "custom"]
                                    },
                                    "topk": {
                                        "type": "integer",
                                        "minimum": 1,
                                        "maximum": 8,
                                        "default": 1
                                    },
                                    "fields": {
                                        "$ref": "#/definitions/nonEmptyStringArray"
                                    },
                                    "orderBy": {
                                        "$ref": "#/definitions/nonEmptyString"
                                    },
                                    "order": {
                                        "enum": ["asc", "desc"]
                                    },
                                    "custom": {"typeofFunction": true},
                                    "orientation": {
                                        "enum": ["vertical", "horizontal"],
                                        "default": "vertical"
                                    },
                                    "config": {
                                        "type": "object",
                                        "properties": {
                                            "bboxW": {
                                                "type": "number"
                                            },
                                            "bboxH": {
                                                "type": "number"
