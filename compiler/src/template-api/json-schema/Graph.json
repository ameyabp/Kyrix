                                                            "functions"
                                                        ],
                                                        "additionalProperties": false
                                                    }
                                                },
                                                {
                                                    "type": "object",
                                                    "properties": {
                                                        "fields": {
                                                            "$ref": "#/definitions/nonEmptyStringArray"
                                                        },
                                                        "functions": {
                                                            "$ref": "#/definitions/aggregationFunctions"
                                                        }
                                                    },
                                                    "required": ["fields", "functions"],
                                                    "additionalProperties": false
                                                }
                                            ],
                                            "default": []
                                        },
                                        "edges": {
                                            "anyOf": [
                                                {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object",
                                                        "properties": {
                                                            "fields": {
                                                                "$ref": "#/definitions/nonEmptyString"
                                                            },
                                                            "functions": {
                                                                "$ref": "#/definitions/aggregationFunctions"
                                                            }
                                                        },
                                                        "required": [
                                                            "fields",
                                                            "functions"
                                                        ],
                                                        "additionalProperties": false
                                                    }
                                                },
                                                {
                                                    "type": "object",
                                                    "properties": {
                                                        "fields": {
                                                            "$ref": "#/definitions/nonEmptyStringArray"
                                                        },
                                                        "functions": {
                                                            "$ref": "#/definitions/aggregationFunctions"
                                                        }
                                                    },
                                                    "required": ["fields", "functions"],
                                                    "additionalProperties": false
                                                }
                                            ],
                                            "default": []
                                        }
                                    },
                                    "additionalProperties": false,
                                    "default": {
                                        "nodes": {},
                                        "edges": {}
                                    }
                                },
                                "algorithm": {
                                    "$ref": "#/definitions/partitioningAlgorithms"
                                }
                            },
                            "default": {
                                "aggregate": {}
                            },
                            "required": ["algorithm"]
                        }
                    },
                    "required": ["partition"],
                    "additionalProperties": false
                }
            ]
