{
    "type": "object",
    "definitions": {
        "nonEmptyString": {
            "type": "string",
            "minLength": 1
        },
        "nonEmptyStringArray": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/nonEmptyString"
            }
        },
        "twoNumberArray": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
        },
        "nonEmptyNumberArray": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 1,
            "maxItems": 5
        },
        "aggregationFunctions": {
            "enum": ["count", "sum", "avg", "min", "max", "sqrsum"]
        }
    },
    "properties": {
        "data": {
            "type": "object",
            "properties": {
                "db": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "queryNodes": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "queryEdges": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "columnNames": {
                    "default": []
                }
            },
            "required": ["db", "queryNodes", "queryEdges"],
            "additionalProperties": false
        },
        "layout": {
            "type": "object",
            "properties": {
                "name": {
                    "enum": ["openORD"]
                },
                "maxLevel": {
                    "type": "number",
                    "default": 2
                },
                "startLevel": {
                    "type": "number",
                    "default": 1
                },
                "lastCut": {
                    "type": "number",
                    "default": 0.8
                },
                "refineCut": {
                    "type": "number",
                    "default": 0.5
                },
                "finalCut": {
                    "type": "number",
                    "default": 0.5
                }
            },
            "required": ["name"],
            "additionalProperties": false,
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "name": {
                                "enum": ["openORD"]
                            }
                        }
                    },
                    "then": {
                        "preoperties": {
                            "required": ["maxLevel", "startLevel", "lastCut", "refineCut", "finalCut"]
                        }
                    }
                }
            ]
        },
        "marks": {
            "type": "object",
            "properties": {
                "cluster": {
                    "type": "object",
                    "properties": {
                        "aggregate": {
                            "type": "string",
                            "minLength": 1
                        },
                        "numClusters": {
                            "$ref": "#/definitions/nonEmptyNumberArray"
                        },
                        "randomState": {
                            "type": "number",
                            "default": 0
                        },
                        "algorithm": {
                            "type": "string",
                            "default": "elkan"
                        }
                    }
                },
                "hover": {
                    "type": "object",
                    "properties": {
                        "rankList": {
                            "type": "object",
                            "properties": {
                                "mode": {
                                    "enum": ["tabular", "custom"]
                                },
                                "topk": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 8,
                                    "default": 1
                                },
                                "fields": {
                                    "$ref": "#/definitions/nonEmptyStringArray"
                                },
                                "custom": {"typeofFunction": true},
                                "orientation": {
                                    "enum": ["vertical", "horizontal"],
                                    "default": "vertical"
                                },
                                "config": {
                                    "type": "object",
                                    "properties": {
                                        "bboxW": {
                                            "type": "number"
                                        },
                                        "bboxH": {
                                            "type": "number"
                                        }
                                    },
                                    "default": {},
                                    "additionalProperties": false
                                }
                            },
                            "required": ["mode"],
                            "additionalProperties": false,
                            "allOf": [
                                {
                                    "if": {
                                        "properties": {
                                            "mode": {
                                                "enum": ["tabular"]
                                            }
                                        }
                                    },
                                    "then": {
                                        "required": ["fields"]
                                    }
                                },
                                {
                                    "if": {
                                        "properties": {
                                            "mode": {
                                                "enum": ["custom"]
                                            }
                                        }
                                    },
                                    "then": {
                                        "properties": {
                                            "config": {
                                                "required": ["bboxW", "bboxH"]
                                            }
                                        },
                                        "required": ["custom", "config"]
                                    }
                                }
                            ]
                        },
                        "tooltip": {
                            "type": "object",
                            "properties": {
                                "columns": {
                                    "$ref": "#/definitions/nonEmptyStringArray"
                                },
                                "aliases": {
                                    "$ref": "#/definitions/nonEmptyStringArray"
                                }
                            },
                            "required": ["columns"],
                            "additionalProperties": false
                        },
                        "boundary": {
                            "enum": ["bbox", "convexhull"]
                        },
                        "selector": {
                            "$ref": "#/definitions/nonEmptyString",
                            "default": "*"
                        }
                    },
                    "additionalProperties": false,
                    "default": {}                    
                }
            },
            "required": ["cluster"],
            "additionalProperties": false
        }
    },
    "required": ["data", "layout", "marks"],
    "additionalProperties": false
}