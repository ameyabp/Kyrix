                                    {
                                        "if": {
                                            "properties": {
                                                "mode": {
                                                    "enum": ["tabular"]
                                                }
                                            }
                                        },
                                        "then": {
                                            "required": ["fields"]
                                        }
                                    },
                                    {
                                        "if": {
                                            "properties": {
                                                "mode": {
                                                    "enum": ["custom"]
                                                }
                                            }
                                        },
                                        "then": {
                                            "properties": {
                                                "config": {
                                                    "required": ["bboxW", "bboxH"]
