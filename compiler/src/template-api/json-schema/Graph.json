                                                                "$ref": "#/definitions/nonEmptyString"
                                                            },
                                                            "functions": {
                                                                "$ref": "#/definitions/aggregationFunctions"
                                                            }
                                                        },
                                                        "required": ["fields", "functions"],
                                                        "additionalProperties": false
                                                    }
                                                },
                                                {
                                                    "type": "object",
                                                    "properties": {
                                                        "fields": {
                                                            "$ref": "#/definitions/nonEmptyStringArray"
                                                        },
                                                        "functions": {
                                                            "$ref": "#/definitions/aggregationFunctions"
                                                        }
                                                    },
                                                    "required": ["fields", "functions"],
                                                    "additionalProperties": false
                                                }
                                            ],
                                            "default": []
                                        }
                                    },
                                    "additionalProperties": false,
                                    "default": {
                                        "nodes": {},
                                        "edges": {}
                                    }
                                },
                                "clusterLevels": {
                                    "$ref": "#/definitions/nonEmptyNumberArray"
                                },
                                "algorithm": {
                                    "$ref": "#/definitions/clusteringAlgorithms"
                                }
                            },
                            "default": {
                                "aggregate": {}
                            },
                            "required": ["algorithm", "clusterLevels"]
                        }
                    },
                    "required": ["cluster"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "partition": {
                            "type": "object",
                            "properties": {
                                "aggregate": {
                                    "type": "object",
                                    "properties": {
                                        "nodes": {
                                            "anyOf": [
                                                {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object",
                                                        "properties": {
                                                            "fields": {
                                                                "$ref": "#/definitions/nonEmptyString"
                                                            },
                                                            "functions": {
                                                                "$ref": "#/definitions/aggregationFunctions"
                                                            }
                                                        },
